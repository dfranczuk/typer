{% extends 'base.html.twig' %}

{% block title %}{{ 'type_weight_show.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'type_weight_show.title' | trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'type_weight_table.name' | trans }}</th>
                <td>{{ typeof_weight.Weight }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('typeof_weight_index') }}">{{ 'type_weight_show.back' | trans }}</a>

    <div class="section">
        <a href="{{ path('typeof_weight_edit', {'id': typeof_weight.id}) }}" class="btn btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
        </a>
    </div>
    <br>
    <div class="section">
        {{ include('typeof_weight/_delete_form.html.twig') }}
    </div>

{% endblock %}