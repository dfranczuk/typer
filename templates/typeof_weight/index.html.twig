{% extends 'base.html.twig' %}

{% block title %}{{ 'type_weight_table.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'type_weight_table.title' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ 'type_weight_table.weight' | trans }}</th>
                <th>{{ 'table.actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for typeof_weight in typeof_weights %}
            <tr>
                <td>{{ typeof_weight.id }}</td>
                <td>{{ typeof_weight.Weight }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('typeof_weight_show', {'id': typeof_weight.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                            <a href="{{ path('typeof_weight_edit', {'id': typeof_weight.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                            </a>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'type_table.no_team_found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('typeof_weight_new') }}">{{ 'type_table.new' | trans }}</a>

{% endblock %}