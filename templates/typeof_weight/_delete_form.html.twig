<form method="post" action="{{ path('typeof_weight_delete', {'id': typeof_weight.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ typeof_weight.id) }}">
    <button type="submit" class="{{ button_css|default("btn btn-danger") }}">
        <i class="fa fa-trash" aria-hidden="true"></i> {{ button_label|default('button_type_weight.delete'|trans) }}
    </button>
</form>