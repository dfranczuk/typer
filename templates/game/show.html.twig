{% extends 'base.html.twig' %}

{% block title %}{{ 'game_show.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'game_show.title' | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'game_table.confrontation' | trans }}</th>
                <td>{{ game.firstTeam }} - {{ game.secondTeam }}</td>
            </tr>
            <tr>
                <th>{{ 'game_table.score' | trans }}</th>
                <td>{{ game.firstTeamScore }} - {{ game.secondTeamScore }}</td>
            </tr>
            <tr>
                <th>{{ 'game_table.weigh' | trans }}</th>
                <td>{{ game.typeofweight }}</td>
            </tr>
            <tr>
                <th>{{ 'game_table.game_date' | trans }}</th>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

          

        </tbody>
    </table>
    <a href="{{ path('game_index') }}">{{ 'game.back' | trans }}</a>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="section">
        <a href="{{ path('game_edit', {id: game.id}) }}" class="btn btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
        </a>
    </div>
        <br>
        <div class="section">
            {{ include('game/_delete_form.html.twig') }}
        </div>

    {% endif %}
{% endblock %}