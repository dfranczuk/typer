{% extends 'base.html.twig' %}

{% block title %}{{ 'game_edit.title' | trans }}{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>
        document.getElementById("btn_save").onclick = function() {myFunction()};
        function myFunction() {
            document.getElementById("message").innerHTML="Team has been updated";
        }
    </script>
{% endblock %}
{% block body %}

    <h1>{{ 'game_edit.title' | trans }}</h1>
    <p id="message"></p>
    {{ include('game/_form.html.twig', {'button_label':  'update' | trans}) }}

    <a href="{{ path('game_index') }}">{{ 'game.back' | trans }}</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}