{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First team score</th>
                <th>Second team score</th>
                <th>Weight</th>
                <th>Game date</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.firstTeamScore }}</td>
                <td>{{ game.secondTeamScore }}</td>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                    {% if is_granted ('ROLE_ADMIN') %}
                    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted ('ROLE_ADMIN') %}
    <a href="{{ path('game_new') }}">Create new</a>
    {% endif %}
{% endblock %}