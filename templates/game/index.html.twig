{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>

        function sortTable(n) {
            var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
            table = document.getElementById("myTable4");
            switching = true;
            dir = "asc";
            while (switching) {

                switching = false;
                rows = table.rows;

                for (i = 1; i < (rows.length - 1); i++) {

                    shouldSwitch = false;

                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];

                    if (dir == "asc") {
                        if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    } else if (dir == "desc") {
                        if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount ++;
                } else {
                    if (switchcount == 0 && dir == "asc") {
                        dir = "desc";
                        switching = true;
                    }
                }
            }
        }

    </script>
{% endblock %}
{% block body %}
    <h1>Game index</h1>

    <table class="table" id="myTable4">
        <thead>
            <tr>
                <th onclick="sortTable(0)" style="cursor:pointer">Id</th>
                <th onclick="sortTable(1)" style="cursor:pointer">Confrontation</th>
                <th onclick="sortTable(2)" style="cursor:pointer">First_team_score</th>
                <th onclick="sortTable(3)" style="cursor:pointer">Second_team_score</th>
                <th onclick="sortTable(4)" style="cursor:pointer">Weight</th>
                <th onclick="sortTable(5)" style="cursor:pointer">Game date</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.firstTeam.name }} - {{ game.secondTeam.name }}</td>
                <td>{{ game.firstTeamScore }}</td>
                <td>{{ game.secondTeamScore }}</td>
                <td>{{ game.typeofweight }}</td>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                   <--? <div class="item-actions">
                        <a href="{{ path('game_show', {id: game.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('game_edit', {id: game.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                        {% endif %}
                    </div> -->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('game_new') }}">Create new</a>
    {% endif %}
{% endblock %}