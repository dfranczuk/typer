{% extends 'base.html.twig' %}

{% block title %}{{ 'user_edit.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'user_edit.title' | trans }}r</h1>

    {{ include('user/_form.html.twig', {'button_label': 'update' | trans}) }}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('user_index') }}">User List</a>
    {% endif %}
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('change_pass', {'email': app.user.email, 'username': app.user.username}) }}">Change password</a>
        <a href="{{ path('homepage') }}">{{ 'user_table.back' | trans }}</a>

    {% endif %}

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
