{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'user.email' | trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'user.username' | trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'user.password' | trans }}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{{ 'user.roles' | trans }}</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{{ 'user_table.back' | trans }}</a>


    <a href="{{ path('user_edit', {'email': user.email, 'username': user.username}) }}">{{ 'action.edit'|trans }}</a>


    <a href="{{ path('change_pass', {'email': user.email, 'username': user.username}) }}">{{ 'user.change_password' | trans }}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
