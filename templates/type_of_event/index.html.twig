{% extends 'base.html.twig' %}

{% block title %}{{ 'TypeOfEvent_table.title'| trans}}{% endblock %}

{% block body %}
    <h1>{{ 'TypeOfEvent_table.title'| trans}}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'TypeOfEvent_table.name' | trans }}</th>
                <th>{{ 'table.actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for type_of_event in type_of_events %}
            <tr>
                <td>{{ type_of_event.name }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('type_of_event_show', {'id': type_of_event.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                            <a href="{{ path('type_of_event_edit', {'id': type_of_event.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                            </a>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'type_table.no_team_found' |trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_of_event_new') }}">{{ 'type_table.new' | trans }}</a>

{% endblock %}