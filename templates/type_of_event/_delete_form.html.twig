<form method="post" action="{{ path('type_of_event_delete', {'id': type_of_event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_of_event.id) }}">

    <button type="submit" class="{{ button_css|default("btn btn-danger") }}">
        <i class="fa fa-trash" aria-hidden="true"></i> {{ button_label|default('button_type_event.delete'|trans) }}
    </button>
</form>