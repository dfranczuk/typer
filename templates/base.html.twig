{#
   This is the base template used as the application layout which contains the
   common elements and decorates all the other templates.
   See https://symfony.com/doc/current/book/templating.html#template-inheritance-and-layouts
#}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Symfony Demo application{% endblock %}</title>
        <link rel="alternate" type="application/rss+xml" title="{{ 'rss.title'|trans }}" href="{{ path('blog_rss') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
            <link rel="stylesheet" href="{{ asset('build/css/linki.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block header %}
            <header>
                <div class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header col-md-3 col-lg-2">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                Typer
                            </a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">{{ 'menu.toggle_nav'|trans }}</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">

                                {% block header_navigation_links %}
                                         <li>
                                            <a href="{{ path('game_index') }}">
                                                <i class="fa fa-home" aria-hidden="true"></i> {{ 'menu.homepage'|trans }}
                                            </a>
                                        </li>

                                    {#   {% if is_granted('ROLE_ADMIN') %}
                                            <li>
                                                <a href="{{ path('admin_post_index') }}">
                                                    <i class="" aria-hidden="true"></i> {{ 'menu.admin' | trans }}
                                                    <p>aaa</p>
                                                </a>
                                            </li>
                                        {% endif %}#}
                                 {% endblock %}
                                {#    <li>
                                      <a href="{{ path('blog_search') }}"> <i class="fa fa-search"></i> {{ 'menu.search'|trans }}</a>
                                  </li>#}


                                  {% if app.user %}
                                      <li>
                                          <a>
                                              <p style="color:white;">Jeste≈õ zalogowany jako: {{ app.user.username }} </p>
                                          </a>
                                      </li>
                                      <li>
                                          <a href="{{ path('security_logout') }}">
                                              <i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'menu.logout'|trans }}
                                          </a>
                                      </li>
                                  {% endif %}
                                  <li class="dropdown">
                                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="locales">
                                          <i class="fa fa-globe" aria-hidden="true"></i>
                                          <span class="caret"></span>
                                          <span class="sr-only">{{ 'menu.choose_language'|trans }}</span>
                                      </a>
                                      <ul class="dropdown-menu locales" role="menu" aria-labelledby="locales">
                                          {% for locale in locales() %}
                                              <li {% if app.request.locale == locale.code %}aria-checked="true" class="active"{% else %}aria-checked="false"{% endif %} role="menuitem"><a href="{{ path(app.request.get('_route', 'blog_index'), app.request.get('_route_params', [])|merge({_locale: locale.code})) }}">{{ locale.name|capitalize }}</a></li>
                                          {% endfor %}
                                      </ul>
                                  </li>
                              </ul>
                          </div>
                      </div>
                  </div>
              </header>
          {% endblock %}

          <div class="container body-container">
              <main class="container-fluid" >
              <div class="row">
                  {% block dashboard %}

                  <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar" style="background-color:#000033; border-radius:12px /12px;">
                      <ul class="nav nav-pills flex-column">
                          <li class="nav-item">
                              <a class="ex1 nav-link " href="{{ path('game_index') }}">{{ 'menu.game' | trans }}</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link ex1"  href="{{ path('team_index') }}">{{ 'menu.team' |trans }}</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link ex1" href="{{ path('tournament_index') }}"> {{ 'menu.tournament' | trans }}</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link ex1" href="{{ path('scoreboard_index') }}">{{ 'menu.scoreboard' | trans }}</a>
                          </li>
                      </ul>

                      <ul class="nav nav-pills flex-column">
                          {% if app.user %}
                          <li class="nav-item">
                              <a class="nav-link ex1" href="{{ path('expected_results_index') }}">{{ 'menu.expected_results' | trans }}</a>
                          </li>
                          {% endif %}
                          {% if is_granted('ROLE_ADMIN') %}
                          <li class="nav-item">
                              <a class="nav-link ex1" href="{{ path('type_of_event_index') }}">{{ 'menu.type_of_event' | trans }}</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link ex1" href="{{ path('typeof_weight_index') }}">{{ 'menu.typeof_weight' | trans }}</a>
                          </li>
                          {% endif %}
                      </ul>
                  </nav>

                  {% endblock %}
                  <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
              {% block body %}


                      <div id="main" class="col-sm-9">
                          {{ include('default/_flash_messages.html.twig') }}
                          {% block main %}{% endblock %}
                      </div>

                      <div id="sidebar" class="col-sm-3">
                          {% block sidebar %}
                              {{ render_esi(controller('Symfony\\Bundle\\FrameworkBundle\\Controller\\TemplateController::templateAction', {
                                  'template': 'blog/about.html.twig',
                                  'sharedAge': 600,
                                  '_locale': app.request.locale
                              })) }}
                          {% endblock %}
                      </div>
                  </main>
                  </div>
              {% endblock %}
              </main>
              </div>
          </div>

          {% block footer %}
              <footer>
                  <div class="container">
                      <div class="row">
                          <div id="footer-copyright" class="col-md-6">
                              <p>&copy; {{ 'now'|date('Y') }} - The Symfony Project</p>
                              <p>{{ 'mit_license'|trans }}</p>
                          </div>
                          <div id="footer-resources" class="col-md-6">
                              <p>
                                  <a href="https://twitter.com/symfony" title="Symfony Twitter">
                                      <i class="fa fa-twitter" aria-hidden="true"></i>
                                  </a>
                                  <a href="https://www.facebook.com/SensioLabs" title="SensioLabs Facebook">
                                      <i class="fa fa-facebook" aria-hidden="true"></i>
                                  </a>
                                  <a href="https://symfony.com/blog/" title="Symfony Blog">
                                      <i class="fa fa-rss" aria-hidden="true"></i>
                                  </a>
                              </p>
                          </div>
                      </div>
                  </div>
              </footer>
          {% endblock %}

          {% block javascripts %}
              <script src="{{ asset('build/manifest.js') }}"></script>
              <script src="{{ asset('build/js/common.js') }}"></script>
              <script src="{{ asset('build/js/app.js') }}"></script>
              <script src="{{ asset('build/js/jquery.js') }}"></script>
              <script src="{{ asset('build/js/sort.js') }}"></script>
              <script src="{{ asset('build/js/game.js') }}"></script>
          {% endblock %}

          {# it's not mandatory to set the timezone in localizeddate(). This is done to
             avoid errors when the 'intl' PHP extension is not available and the application
             is forced to use the limited "intl polyfill", which only supports UTC and GMT #}
        <!-- Page rendered on {{ 'now'|localizeddate('long', 'long', null, 'UTC') }} -->
    </body>
</html>
