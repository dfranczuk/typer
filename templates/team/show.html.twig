{% extends 'base.html.twig' %}

{% block title %}{{ 'team_show.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'team_show.title' | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'team_table.name' | trans }}</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>{{ 'team_table.type' | trans }}</th>
                <td>
                    {% if  team.type  == 'representation' %}
                        {{ 'team_table.representation' | trans}}
                    {% elseif  team.type  == 'club' %}
                       {{ 'team_table.club' | trans }}
                    {% else %}
                        {{ 'team_table.notype' | trans }}
                    {% endif %}
                    </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">{{ 'team.back' | trans }}</a>
    {% if is_granted('ROLE_ADMIN') %}

        <div class="section">
            <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-success">
                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
            </a>
        </div>
        <br>
        <div class="section">
            {{ include('team/_delete_form.html.twig') }}
        </div>
    {% endif %}
{% endblock %}