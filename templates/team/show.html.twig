{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ team.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">back to list</a>
{% if app.user.role is same as('["ROLE_ADMIN"]') %}
    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
    {{ include('team/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}